rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin (demo or other admin accounts)
    function isAdmin() {
      return request.auth.email in ['demo.demo@gmail.com', 'admin@gmail.com'];
    }

    // Helper function to check if document belongs to current user
    function isUserDocument() {
      return resource.data.userId == request.auth.uid;
    }

    // Helper function for new documents
    function isNewUserDocument() {
      return request.resource.data.userId == request.auth.uid;
    }

    // ==================== TRACKS ====================
    match /tracks/{trackId} {
      allow read, create, update, delete: if isAuthenticated();
      
      // ==================== DAYS (subcollection) ====================
      match /days/{dayId} {
        allow read, create, update, delete: if isAuthenticated();
      }
    }

    // ==================== DAYS (top-level) ====================
    match /days/{dayId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // ==================== TIRE SETS ====================
    match /tireSets/{tireSetId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // ==================== TIRES ====================
    match /tires/{tireId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // ==================== TIRE EVENTS ====================
    match /tireEvents/{eventId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // ==================== BUILDS ====================
    match /builds/{buildId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // ==================== USERS ====================
    match /users/{userId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // ==================== BUG REPORTS ====================
    match /bugReports/{reportId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // ==================== DEFAULT (deny everything else) ====================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
